
<% content_for :title, "Movies" %>

<%= render "shared/navbar_movie" %>

<div class="text-center justify-content-center">

  <h1>Películas encontradas</h1>
  
  <div id="clients">
    <div class="table-responsive">
    <table class="table table-striped">

      <thead>
        <tr class="table-success text-start">
          <th class="col-1" scope="col">#</th>
          <th class="col-5" scope="col">Película</th>
          <th class="col-5" scope="col">Cliente</th>
          <th class="col-1  text-center" scope="col">ACCIÓN</th>
        </tr>
      </thead>

      <tbody >
        <% @movies.each do |movie| %>
          <%= render movie %>
        <% end %>
      </tbody>

    </table>
    </div>

    <nav aria-label="Page navigation">
      <ul class="pagination pagination-lg justify-content-center">
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>

  </div>

</div>