<%= form_with(model: movie) do |form| %>

  <% if movie.errors.any? %>
    <div style="color: red">
     <h2><%= pluralize(movie.errors.count, "Error") %> no permitió(eron) que esta película fuera creada:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div class="my-2 col-12 col-md-6">
      <%= form.label :name, "Nombre película", class: "col-12" %>
      <br>
      <%= form.text_field :name, required: true, placeholder: "Nombre de la película", class: "ps-2 col-12 border rounded-2", style:"height: 40px" %>
    </div>

    <div class="my-2 col-12 col-md-6">
      <%= form.label  :client_id, "Cliente", class: "col-2" %>
      <%= form.select :client_id, options_for_select([["Seleccione un cliente", ""]] + @clients), {}, class: "ps-2 form-select", prompt: "Seleccione un cliente", style:"height: 40px" %>
    </div>

    <br>
    <div>
      <button type="submit" class="col-4 col-md-1 p-2 mr-2 btn btn-success border ">Submit</button>
    </div>
  </div>
  
<% end %>
